import java.util.*;

class Solution {
    public boolean hasIncreasingSubarrays(List<Integer> nums, int k) {
        int n = nums.size();
        int prev = 0;
        int cur = 1;

        for (int i = 1; i < n; i++) {
            if (nums.get(i) > nums.get(i - 1)) {
                cur++;
            } else {
                if (cur >= 2 * k || Math.min(prev, cur) >= k)
                    return true;
                prev = cur;
                cur = 1;
            }
        }

        if (cur >= 2 * k || Math.min(prev, cur) >= k)
            return true;

        return false;
    }
}